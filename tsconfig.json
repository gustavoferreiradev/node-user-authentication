/* Visit https://aka.ms/tsconfig.json to read more about this file */
{
  "compilerOptions": {    
    "target": "es2019",                        
    "module": "commonjs",                    
    "outDir": "./dist",                      
    "rootDir": "./src",                       
    "strict": true,                          
    "moduleResolution": "node",           
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],                      
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
